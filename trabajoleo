1Ô∏è‚É£ MainActivity.java
Ruta: app/src/main/java/com/example/ejemplosqlite/MainActivity.java
javapackage com.example.ejemplosqlite;

import androidx.appcompat.app.AppCompatActivity;
import android.content.ContentValues;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.widget.TextView;
import android.widget.Toast;
import com.google.android.material.button.MaterialButton;
import com.google.android.material.textfield.TextInputEditText;

public class MainActivity extends AppCompatActivity {

    private MaterialButton btnRegistroInicio, btnRegistroAtras, btnRegistroAdelante, btnRegistroFinal;
    private MaterialButton btnAgregar, btnEliminar, btnModificar, btnBuscar;
    private TextInputEditText editTextId, editTextNombre, editTextDescripcion;
    private TextView textViewInfo;
    private AdminSQLiteOpenHelper admin;
    private Cursor cursor;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        inicializarVistasMaterial();
        conectarBaseDatos();
        cargarDatos();
        configurarListenersMaterial();
        if (cursor != null && cursor.getCount() > 0) {
            cursor.moveToFirst();
            mostrarRegistro();
        }
    }

    private void inicializarVistasMaterial() {
        btnRegistroInicio = findViewById(R.id.btnRegistroInicio);
        btnRegistroAtras = findViewById(R.id.btnRegistroAtras);
        btnRegistroAdelante = findViewById(R.id.btnRegistroAdelante);
        btnRegistroFinal = findViewById(R.id.btnRegistroFinal);
        btnAgregar = findViewById(R.id.btnAgregar);
        btnEliminar = findViewById(R.id.btnEliminar);
        btnModificar = findViewById(R.id.btnModificar);
        btnBuscar = findViewById(R.id.btnBuscar);
        editTextId = findViewById(R.id.editTextId);
        editTextNombre = findViewById(R.id.editTextNombre);
        editTextDescripcion = findViewById(R.id.editTextDescripcion);
        textViewInfo = findViewById(R.id.textViewInfo);
    }

    private void configurarListenersMaterial() {
        btnAgregar.setOnClickListener(v -> agregarRegistro());
        btnEliminar.setOnClickListener(v -> eliminarRegistro());
        btnModificar.setOnClickListener(v -> modificarRegistro());
        btnBuscar.setOnClickListener(v -> buscarRegistro());
        btnRegistroInicio.setOnClickListener(v -> navegarPrimero());
        btnRegistroAtras.setOnClickListener(v -> navegarAnterior());
        btnRegistroAdelante.setOnClickListener(v -> navegarSiguiente());
        btnRegistroFinal.setOnClickListener(v -> navegarUltimo());
    }

    private void navegarPrimero() {
        if (cursor != null && cursor.getCount() > 0) {
            cursor.moveToFirst();
            mostrarRegistro();
            animarBoton(btnRegistroInicio);
        }
    }

    private void navegarAnterior() {
        if (cursor != null && cursor.getCount() > 0) {
            int actual = cursor.getPosition();
            if (actual > 0) {
                cursor.moveToPrevious();
                mostrarRegistro();
                animarBoton(btnRegistroAtras);
            } else {
                Toast.makeText(this, "Ya est√°s en el primer registro", Toast.LENGTH_SHORT).show();
            }
        }
    }

    private void navegarSiguiente() {
        if (cursor != null && cursor.getCount() > 0) {
            int actual = cursor.getPosition();
            if (actual < cursor.getCount() - 1) {
                cursor.moveToNext();
                mostrarRegistro();
                animarBoton(btnRegistroAdelante);
            } else {
                Toast.makeText(this, "Ya est√°s en el √∫ltimo registro", Toast.LENGTH_SHORT).show();
            }
        }
    }

    private void navegarUltimo() {
        if (cursor != null && cursor.getCount() > 0) {
            cursor.moveToLast();
            mostrarRegistro();
            animarBoton(btnRegistroFinal);
        }
    }

    private void animarBoton(MaterialButton boton) {
        boton.animate().scaleX(0.9f).scaleY(0.9f).setDuration(100)
            .withEndAction(() -> boton.animate().scaleX(1f).scaleY(1f).setDuration(100).start()).start();
    }

    private void conectarBaseDatos() {
        try {
            admin = new AdminSQLiteOpenHelper(this);
        } catch (Exception e) {
            Toast.makeText(this, "Error al conectar con BD", Toast.LENGTH_LONG).show();
        }
    }

    public void cargarDatos() {
        try {
            if (cursor != null && !cursor.isClosed()) {
                cursor.close();
            }
            cursor = admin.obtenerTodosLosRegistros();
            actualizarInfoRegistro();
        } catch (Exception e) {
            Toast.makeText(this, "Error al cargar datos", Toast.LENGTH_LONG).show();
        }
    }

    private void agregarRegistro() {
        String nombre = editTextNombre.getText().toString().trim();
        String descripcion = editTextDescripcion.getText().toString().trim();
        if (nombre.isEmpty() || descripcion.isEmpty()) {
            Toast.makeText(this, "Completa todos los campos", Toast.LENGTH_SHORT).show();
            return;
        }
        try {
            SQLiteDatabase db = admin.getWritableDatabase();
            ContentValues values = new ContentValues();
            values.put(AdminSQLiteOpenHelper.COLUMN_NOMBRE, nombre);
            values.put(AdminSQLiteOpenHelper.COLUMN_DESCRIPCION, descripcion);
            long resultado = db.insert(AdminSQLiteOpenHelper.TABLE_GRAMINEAS, null, values);
            db.close();
            if (resultado != -1) {
                Toast.makeText(this, "‚úÖ Registro agregado", Toast.LENGTH_SHORT).show();
                cargarDatos();
                if (cursor.getCount() > 0) {
                    cursor.moveToLast();
                    mostrarRegistro();
                }
                limpiarCamposParaNuevo();
                animarBoton(btnAgregar);
            }
        } catch (Exception e) {
            Toast.makeText(this, "Error al agregar", Toast.LENGTH_LONG).show();
        }
    }

    private void eliminarRegistro() {
        String id = editTextId.getText().toString().trim();
        if (id.isEmpty()) {
            Toast.makeText(this, "Selecciona un registro", Toast.LENGTH_SHORT).show();
            return;
        }
        try {
            SQLiteDatabase db = admin.getWritableDatabase();
            int resultado = db.delete(AdminSQLiteOpenHelper.TABLE_GRAMINEAS,
                AdminSQLiteOpenHelper.COLUMN_ID + " = ?", new String[]{id});
            db.close();
            if (resultado == 1) {
                Toast.makeText(this, "üóëÔ∏è Registro eliminado", Toast.LENGTH_SHORT).show();
                cargarDatos();
                if (cursor.getCount() > 0) {
                    cursor.moveToFirst();
                    mostrarRegistro();
                } else {
                    limpiarCampos();
                }
                animarBoton(btnEliminar);
            }
        } catch (Exception e) {
            Toast.makeText(this, "Error al eliminar", Toast.LENGTH_LONG).show();
        }
    }

    private void modificarRegistro() {
        String id = editTextId.getText().toString().trim();
        String nombre = editTextNombre.getText().toString().trim();
        String descripcion = editTextDescripcion.getText().toString().trim();
        if (id.isEmpty() || nombre.isEmpty() || descripcion.isEmpty()) {
            Toast.makeText(this, "Completa todos los campos", Toast.LENGTH_SHORT).show();
            return;
        }
        try {
            SQLiteDatabase db = admin.getWritableDatabase();
            ContentValues values = new ContentValues();
            values.put(AdminSQLiteOpenHelper.COLUMN_NOMBRE, nombre);
            values.put(AdminSQLiteOpenHelper.COLUMN_DESCRIPCION, descripcion);
            int resultado = db.update(AdminSQLiteOpenHelper.TABLE_GRAMINEAS, values,
                AdminSQLiteOpenHelper.COLUMN_ID + " = ?", new String[]{id});
            db.close();
            if (resultado == 1) {
                Toast.makeText(this, "‚úèÔ∏è Registro modificado", Toast.LENGTH_SHORT).show();
                cargarDatos();
                animarBoton(btnModificar);
            }
        } catch (Exception e) {
            Toast.makeText(this, "Error al modificar", Toast.LENGTH_LONG).show();
        }
    }

    private void buscarRegistro() {
        String id = editTextId.getText().toString().trim();
        if (id.isEmpty()) {
            Toast.makeText(this, "Ingresa un ID", Toast.LENGTH_SHORT).show();
            return;
        }
        try {
            Cursor fila = admin.buscarPorId(id);
            if (fila.moveToFirst()) {
                editTextId.setText(fila.getString(0));
                editTextNombre.setText(fila.getString(1));
                editTextDescripcion.setText(fila.getString(2));
                Toast.makeText(this, "üîç Registro encontrado", Toast.LENGTH_SHORT).show();
                actualizarInfoRegistro();
                animarBoton(btnBuscar);
            } else {
                Toast.makeText(this, "Registro no encontrado", Toast.LENGTH_SHORT).show();
            }
            fila.close();
        } catch (Exception e) {
            Toast.makeText(this, "Error en b√∫squeda", Toast.LENGTH_LONG).show();
        }
    }

    public void mostrarRegistro() {
        if (cursor != null && cursor.getCount() > 0 && !cursor.isAfterLast()) {
            editTextId.setText(cursor.getString(0));
            editTextNombre.setText(cursor.getString(1));
            editTextDescripcion.setText(cursor.getString(2));
            actualizarInfoRegistro();
        } else {
            limpiarCampos();
        }
    }

    private void actualizarInfoRegistro() {
        if (cursor != null && cursor.getCount() > 0) {
            int actual = cursor.getPosition() + 1;
            int total = cursor.getCount();
            textViewInfo.setText("üìä Registro " + actual + " de " + total);
        } else {
            textViewInfo.setText("üìä No hay registros");
        }
    }

    private void limpiarCampos() {
        editTextId.setText("");
        editTextNombre.setText("");
        editTextDescripcion.setText("");
        actualizarInfoRegistro();
    }

    private void limpiarCamposParaNuevo() {
        editTextNombre.setText("");
        editTextDescripcion.setText("");
        editTextNombre.requestFocus();
    }

    @Override
    protected void onDestroy() {
        super.onDestroy();
        if (cursor != null && !cursor.isClosed()) {
            cursor.close();
        }
    }
}

2Ô∏è‚É£ AdminSQLiteOpenHelper.java
Ruta: app/src/main/java/com/example/ejemplosqlite/AdminSQLiteOpenHelper.java
javapackage com.example.ejemplosqlite;

import android.content.Context;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;

public class AdminSQLiteOpenHelper extends SQLiteOpenHelper {
    
    private static final String DATABASE_NAME = "gramineas.db";
    private static final int DATABASE_VERSION = 1;
    
    public static final String TABLE_GRAMINEAS = "gramineas";
    public static final String COLUMN_ID = "idgraminea";
    public static final String COLUMN_NOMBRE = "nombrecomun";
    public static final String COLUMN_DESCRIPCION = "descripcion";

    public AdminSQLiteOpenHelper(Context context) {
        super(context, DATABASE_NAME, null, DATABASE_VERSION);
    }

    @Override
    public void onCreate(SQLiteDatabase db) {
        String CREATE_TABLE = "CREATE TABLE " + TABLE_GRAMINEAS + "(" +
                COLUMN_ID + " INTEGER PRIMARY KEY AUTOINCREMENT, " +
                COLUMN_NOMBRE + " TEXT, " +
                COLUMN_DESCRIPCION + " TEXT)";
        db.execSQL(CREATE_TABLE);
    }

    @Override
    public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
        db.execSQL("DROP TABLE IF EXISTS " + TABLE_GRAMINEAS);
        onCreate(db);
    }

    public Cursor obtenerTodosLosRegistros() {
        SQLiteDatabase db = this.getReadableDatabase();
        String query = "SELECT * FROM " + TABLE_GRAMINEAS + " ORDER BY " + COLUMN_ID;
        return db.rawQuery(query, null);
    }

    public Cursor buscarPorId(String id) {
        SQLiteDatabase db = this.getReadableDatabase();
        String query = "SELECT * FROM " + TABLE_GRAMINEAS + 
                      " WHERE " + COLUMN_ID + " = ?";
        return db.rawQuery(query, new String[]{id});
    }
}

